<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianbo.smartcity.modules.your.dao.mapper.DeviceMapper">

    <select id="selectByCode" resultType="com.tianbo.smartcity.modules.your.entity.Device">
        select * from t_device
        where del_flag = '0'
        <if test="code != null and code != ''">
            and code = #{code}
        </if>
    </select>

    <select id="getDeviceTypeList" resultType="com.tianbo.smartcity.modules.your.vo.DeviceVo">
      SELECT
            COUNT(*) AS count,
            a.running_state AS runningState
        FROM
            t_device a
        WHERE
            a.del_flag = '0'
        GROUP BY
            a.running_state
        ORDER BY
            a.running_state;
    </select>
</mapper>